{
  "name": "network-source-truth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:coverage": "jest --coverage",
    "db:init": "ts-node --project scripts/tsconfig.json scripts/init-db.ts",
    "db:seed": "ts-node --project scripts/tsconfig.json scripts/seed-db.ts",
    "db:test": "ts-node --project scripts/tsconfig.json scripts/test-db.ts",
    "db:test-startup": "ts-node --project scripts/tsconfig.json scripts/test-startup-init.ts",
    "db:reset": "rm -f data/network-source-truth.db && npm run db:init && npm run db:seed",
    "db:reset-test": "rm -f data/network-source-truth-test.db",
    "api:test": "curl -s http://localhost:3000/api/health | jq .",
    "api:docs": "echo 'API Documentation available at: docs/api-documentation.md'",
    "setup": "npm install && npm run db:init && npm run db:seed",
    "clean": "rm -rf .next && rm -rf node_modules/.cache && npm run db:reset",
    "verify": "npm run lint && npm run test && npm run build",
    "verify:requirements": "ts-node --project scripts/tsconfig.json scripts/verify-requirements.ts",
    "verify:responsive": "ts-node --project scripts/tsconfig.json scripts/verify-responsive.ts",
    "verify:full": "npm run verify && npm run verify:requirements && npm run verify:responsive",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react-window": "^1.8.8",
    "better-sqlite3": "^9.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.532.0",
    "next": "^15.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-window": "^1.8.11",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^2.0.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "supertest": "^6.3.0",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  }
}
